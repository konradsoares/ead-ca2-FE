{
  "name": "bp_web_app",
  "version": "1.0.0",
  "description": "BP Node.js FE for Docker",
  "author": "Omar Portillo",
  "main": "fe-server.js",
  "scripts": {
    "start": "node fe-server.js",
    "test": "mocha './*spec.js' --exit",
    "lint": "eslint . --ext .js",
    "audit": "npm audit --audit-level=high",
    "perf": "lighthouse http://localhost:3000 --quiet --chrome-flags='--headless' --output=json --output-path=./lighthouse-report.json"
  },
  "dependencies": {
    "express": "^4.21.2",
    "mongodb": "^3.1.13",
    "prom-client": "^15.1.3",
    "request": "^2.81.0",
    "sinon": "^15.0.4"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "lighthouse": "^12.5.1",
    "mocha": "^10.2.0"
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true,
      "mocha": true
    },
    "extends": "standard",
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "single"
      ]
    }
  }
}
